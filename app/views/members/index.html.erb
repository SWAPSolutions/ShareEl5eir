<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>Role</th>
      <th>Bio</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Photo</th>
      <th>Devise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.f_name %></td>
        <td><%= member.l_name %></td>
        <td><%= member.role %></td>
        <td><%= member.bio %></td>
        <td><%= member.phone %></td>
        <td><%= member.address %></td>
        <td><%= member.photo %></td>
        <td><%= member.devise_id %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

